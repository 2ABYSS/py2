def sayi(x,y):
    return x + y


print(sayi(8,10))





def fonk_tuple(*argv):
    for arg in argv:
        print(arg)

fonk_tuple("selam", "naber","nasılsın","iyidir")



def listele(sayi1):
    cift_sayi = []
    for i in  range(2,sayi1+1,2):
        cift_sayi.append(i)
    return cift_sayi
        

sayi1 = (int(input("sayi gir:")))
cift_sayi_list = listele(sayi1)
print(cift_sayi_list)



