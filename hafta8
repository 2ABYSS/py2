if (secenek==1):
    num1=int(input("1. sayiyi giriniz"))
    num2=int(input("2. sayiyi giriniz"))
    print(num1+num2)
    
elif(secenek==2):
    print(num1-num2)

elif(secenek==2):
    print(num1*num2)

